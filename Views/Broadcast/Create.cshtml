@model E_CounsellingWebApplication.ViewModels.BroadcastCreateViewModel;

@{
    ViewBag.Title = "BroadCast Create";
    var Id = ViewBag.Id;

}
<form enctype="multipart/form-data" asp-controller="Broadcast" asp-action="Create" method="post" class="mt-3">
    
    <input type="hidden" asp-for="@Model.UserId" value="@Id" />
    <div class="form-group row">
        
        <textarea asp-for="Text" class="form-control" id="TextArea1" placeholder="Write your message here" rows="6"></textarea>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button asp-route-Email="@User.Identity.Name"  type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
    <br />
    <div asp-validation-summary="All" class="text-danger"></div>
</form>